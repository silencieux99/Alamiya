rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permettre l'upload d'images d'annonces pour les utilisateurs authentifiés
    match /ads/{allPaths=**} {
      // Lecture publique (pour afficher les images)
      allow read: if true;
      // Écriture uniquement pour les utilisateurs authentifiés
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Permettre l'upload d'avatars pour les utilisateurs authentifiés
    match /avatars/{userId}/{allPaths=**} {
      // Lecture publique
      allow read: if true;
      // Écriture uniquement par le propriétaire
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024  // Max 2MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Refuser tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

